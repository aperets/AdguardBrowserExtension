{
  "manifest_version": 2,
  "name": "Yutube blocker",
  "short_name": "Ublocker",
  "author": "Yutube blocker Ltd.",
  "version": "${version}",
  "description": "Yutube blocker API",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "Yutube blocker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["scripts/adguard-content.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "match_about_blank": true,
      "run_at": "document_start"
    },
    {
      "all_frames": false,
      "js": ["scripts/adguard-assistant.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "minimum_chrome_version": "49.0",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
     "*://*.youtube.com/*",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "cookies"
  ]
}
